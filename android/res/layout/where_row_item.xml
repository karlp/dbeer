<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:orientation="horizontal"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent"
        >

    <!-- put an icon for a bar here? -->

    <TextView a:id="@+id/bar_name"
            a:layout_width="wrap_content"
            a:layout_height="wrap_content"
            a:layout_weight="1"
            a:textSize="30sp"
            />

    <TextView a:id="@+id/bar_distance"
            a:layout_width="wrap_content"
            a:layout_height="fill_parent"
            a:padding="2sp"
            a:gravity="center_vertical"
            />

    <!-- put a spinny arrow here, showing the direction of thebar? like in osmand? -->
    <ImageView a:id="@+id/bar_direction"
               a:layout_width="24sp"
               a:layout_height="24sp"
               a:src="@drawable/ic_menu_goto"
               a:layout_gravity="center_vertical"
               a:padding="2sp"
            />

    <TextView a:id="@+id/bar_price"
            a:layout_width="wrap_content"
            a:layout_height="fill_parent"
            a:padding="2sp"
            a:gravity="center_vertical"
            />

</LinearLayout>
