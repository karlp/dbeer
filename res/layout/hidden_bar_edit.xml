<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent"
              a:orientation="vertical"
        >

    <TextView a:id="@+id/hidden_edit_title"
              a:layout_width="fill_parent"
              a:layout_height="wrap_content"
              a:text="@string/hidden_edit_title"
              a:textSize="20sp"
            />
    <Button a:id="@+id/hidden_edit_btn_clear_all"
            a:text="@string/hidden_edit_btn_clear_label"
            a:layout_height="wrap_content"
            a:layout_width="wrap_content"
            a:onClick="onClick_clearAll"
            />
    <ListView a:id="@+id/android:list"
              a:layout_width="fill_parent"
              a:layout_height="wrap_content"
              a:layout_weight="1"
            />

</LinearLayout>