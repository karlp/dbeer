<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent"
              a:orientation="vertical">
    <TextView a:id="@+id/choose_correct_bar_instructions"
              a:layout_height="wrap_content"
              a:layout_width="fill_parent"
              a:gravity="center"
              a:textSize="20sp"
              a:textStyle="bold"
              a:text="@string/choose_correct_bar_instructions"/>
    <ListView a:id="@+id/android:list"
              a:layout_height="wrap_content"
              a:layout_width="fill_parent"
              a:layout_weight="1"
            />
</LinearLayout>