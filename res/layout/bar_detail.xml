<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
              a:layout_width="fill_parent"
              a:layout_height="fill_parent"
              a:orientation="vertical">
    <TextView a:id="@+id/bar_detail_name"
              a:layout_height="wrap_content"
              a:layout_width="fill_parent"
              a:textSize="20sp"
            />
    <Button a:id="@+id/bar_get_directions_btn"
            a:layout_height="wrap_content"
            a:layout_width="wrap_content"
            a:text="@string/bar_detail_get_directions"
            />
    <Button a:id="@+id/bar_show_on_map_btn"
            a:layout_height="wrap_content"
            a:layout_width="wrap_content"
            a:text="@string/bar_detail_show_on_map"
            />

    <ListView a:id="@+id/android:list"
              a:layout_height="wrap_content"
              a:layout_width="fill_parent"
            />

</LinearLayout>